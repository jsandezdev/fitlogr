{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "plugins": [
    "promise",
    "react",
    "simple-import-sort"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "indent": ["error", 2],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  }
}
